<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EDE2"
    android:backgroundTint="#EFF1E8"
    >

    <EditText
        android:id="@+id/editTextWidthPyr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/editTextLengthPyr"
        app:layout_constraintStart_toStartOf="@+id/editTextLengthPyr"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="Length"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/editTextLengthPyr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Height"
        app:layout_constraintEnd_toEndOf="@+id/editTextWidthPyr"
        app:layout_constraintStart_toStartOf="@+id/editTextWidthPyr"
        app:layout_constraintTop_toBottomOf="@+id/editTextWidthPyr" />

    <EditText
        android:id="@+id/editTextHeightPyr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/editTextWidthPyr"
        app:layout_constraintStart_toStartOf="@+id/editTextWidthPyr"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Width"
        app:layout_constraintEnd_toEndOf="@+id/editTextLengthPyr"
        app:layout_constraintStart_toStartOf="@+id/editTextLengthPyr"
        app:layout_constraintTop_toBottomOf="@+id/editTextLengthPyr" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Pyramid"
        android:textColor="@color/skyBlue"
        android:textSize="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103" />

    <Button
        android:id="@+id/btnSolvePyr"
        android:layout_width="191dp"
        android:layout_height="56dp"
        android:layout_marginTop="124dp"
        android:backgroundTint="@color/skyBlue"
        android:text="Solve"
        app:layout_constraintEnd_toEndOf="@+id/editTextHeightPyr"
        app:layout_constraintStart_toStartOf="@+id/editTextHeightPyr"
        app:layout_constraintTop_toBottomOf="@+id/editTextHeightPyr" />

    <TextView
        android:id="@+id/answerPyr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text=" "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextHeightPyr" />

</androidx.constraintlayout.widget.ConstraintLayout>